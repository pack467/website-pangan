{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "build",
    "resolveJsonModule": true
  },
  "include": ["src", "__test__", "config", "src/types/*.d.ts"],
  "exclude": ["src/__test__/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
